        display: flex;
        margin-top: 60px;
        min-height: calc(100vh - 60px);
      }

      .sidebar {
        width: 280px;
        background: white;
        border-right: 1px solid var(--border);
        padding: 2rem 0;
        position: fixed;
        height: calc(100vh - 60px);
        overflow-y: auto;
