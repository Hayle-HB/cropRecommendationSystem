        padding: 0 1.5rem 1.5rem;
        border-bottom: 1px solid var(--border);
        margin-bottom: 1.5rem;
      }

      .sidebar-header h2 {
        font-size: 1.1rem;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
      }

      .sidebar-header p {
        font-size: 0.9rem;
        color: var(--text-light);
      }

      .sidebar-nav {
        padding: 0 1rem;
      }

      .nav-section {
        margin-bottom: 1.5rem;
      }

      .nav-section h3 {
        font-size: 0.9rem;
        text-transform: uppercase;
        color: var(--text-light);
        margin-bottom: 0.75rem;
        padding: 0 0.5rem;
      }

      .nav-links {
        list-style: none;
      }

      .nav-links li {
        margin-bottom: 0.25rem;
      }

      .nav-links a {
        display: block;
        padding: 0.5rem;
        color: var(--text-dark);
        text-decoration: none;
        font-size: 0.95rem;
        border-radius: 6px;
        transition: all 0.3s ease;
      }

      .nav-links a:hover,
      .nav-links a.active {
        background: var(--background-alt);
        color: var(--primary);
      }

      .nav-links a.active {
        font-weight: 500;
      }

      .main-content {
        flex: 1;
        margin-left: 280px;
        padding: 2rem 5%;
        max-width: 900px;
