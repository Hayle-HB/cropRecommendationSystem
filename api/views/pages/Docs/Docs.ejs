      .parameter-table th,
      .parameter-table td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--border);
      }

      .parameter-table th {
        background: var(--background-alt);
        font-weight: 600;
        color: var(--text-dark);
      }

      .parameter-table td {
        color: var(--text-light);
      }

      .parameter-table tr:last-child td {
        border-bottom: none;
      }

      .tag {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
        font-weight: 500;
        margin-right: 0.5rem;
      }

      .tag.get {
        background: #e3f2fd;
        color: #1976d2;
      }
      .tag.post {
        background: #e8f5e9;
        color: #2e7d32;
      }
      .tag.put {
        background: #fff3e0;
        color: #f57c00;
      }
      .tag.delete {
        background: #fce4ec;
        color: #c2185b;
      }

      @media (max-width: 1024px) {
        .sidebar {
          width: 240px;
        }

