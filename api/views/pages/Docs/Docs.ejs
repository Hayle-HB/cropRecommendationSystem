      :root {
        --primary: #2d6a4f;
        --primary-light: #40916c;
        --primary-dark: #1b4332;
        --secondary: #ff9e00;
        --accent: #ff6b6b;
        --text-dark: #1a1a1a;
        --text-light: #4a4a4a;
        --background: #f8fafc;
        --background-alt: #f1f5f9;
        --success: #10b981;
        --error: #ef4444;
        --border: rgba(0, 0, 0, 0.08);
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --code-bg: #f6f8fa;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Plus Jakarta Sans", sans-serif;
        line-height: 1.6;
        color: var(--text-dark);
        background: var(--background);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Navbar Styles */
      .navbar {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        padding: 0.75rem 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--border);
        height: 60px;
      }

      .navbar .brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .navbar .brand i {
        font-size: 1.75rem;
        color: var(--secondary);
      }

      .navbar nav {
        display: flex;
        gap: 1.5rem;
      }

      .navbar nav a {
        color: var(--text-dark);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
      }

      .navbar nav a:hover {
        background: var(--primary);
        color: white;
      }

      /* Documentation Layout */
